{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Couchbase Action",
  "configuration-groups": [
    {
      "label": "General",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "csv",
          "label": "Nodes",
          "name": "nodes"
        },
        {
          "widget-type": "textbox",
          "label": "Bucket",
          "name": "bucket"
        },
        {
          "widget-type": "textbox",
          "label": "Query",
          "name": "query"
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "username"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "widget-type": "number",
          "label": "Max Parallelism",
          "name": "maxParallelism",
          "widget-attributes": {
            "default": "0"
          }
        },
        {
          "name": "consistency",
          "label": "Scan Consistency",
          "widget-type": "select",
          "widget-attributes": {
            "default": "Not Bounded",
            "values": [
              "Not Bounded",
              "Request Plus",
              "Statement  Plus"
            ]
          }
        },
        {
          "widget-type": "number",
          "label": "Query Timeout",
          "name": "timeout",
          "widget-attributes": {
            "min": "0",
            "default": "600"
          }
        }
      ]
    }
  ]
}
