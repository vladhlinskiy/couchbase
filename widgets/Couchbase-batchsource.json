{
  "metadata": {
    "spec-version": "1.5"
  },
  "display-name": "Couchbase",
  "configuration-groups": [
    {
      "label": "Basic",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Reference Name",
          "name": "referenceName"
        },
        {
          "widget-type": "csv",
          "label": "Nodes",
          "name": "nodes"
        },
        {
          "widget-type": "textbox",
          "label": "Bucket",
          "name": "bucket"
        },
        {
          "widget-type": "textbox",
          "label": "Select Fields",
          "name": "selectFields",
          "widget-attributes": {
            "default": "*"
          }
        },
        {
          "widget-type": "textbox",
          "label": "Conditions",
          "name": "conditions",
          "plugin-function": {
            "widget": "outputSchema",
            "output-property": "schema",
            "omit-properties": [
              {
                "name": "schema"
              }
            ]
          }
        },
        {
          "widget-type": "number",
          "label": "Number of Splits",
          "name": "numSplits",
          "widget-attributes": {
            "default": "0"
          }
        }
      ]
    },
    {
      "label": "Credentials",
      "properties": [
        {
          "widget-type": "textbox",
          "label": "Username",
          "name": "username"
        },
        {
          "widget-type": "password",
          "label": "Password",
          "name": "password"
        }
      ]
    },
    {
      "label": "Advanced",
      "properties": [
        {
          "name": "on-error",
          "label": "On Record Error",
          "widget-type": "radio-group",
          "widget-attributes": {
            "layout": "block",
            "default": "fail-pipeline",
            "options": [
              {
                "id": "send-to-error",
                "label": "Send to error"
              },
              {
                "id": "skip-error",
                "label": "Skip error"
              },
              {
                "id": "fail-pipeline",
                "label": "Fail pipeline"
              }
            ]
          }
        },
        {
          "widget-type": "number",
          "label": "Sample Size",
          "name": "sampleSize",
          "widget-attributes": {
            "default": "1000"
          }
        },
        {
          "widget-type": "number",
          "label": "Max Parallelism",
          "name": "maxParallelism",
          "widget-attributes": {
            "default": "0"
          }
        },
        {
          "name": "consistency",
          "label": "Scan Consistency",
          "widget-type": "select",
          "widget-attributes": {
            "default": "Not Bounded",
            "values": [
              "Not Bounded",
              "Request Plus",
              "Statement  Plus"
            ]
          }
        },
        {
          "widget-type": "number",
          "label": "Query Timeout",
          "name": "timeout",
          "widget-attributes": {
            "min": "0",
            "default": "600"
          }
        }
      ]
    }
  ],
  "outputs": [
    {
      "name": "schema",
      "label": "schema",
      "widget-type": "schema",
      "widget-attributes": {
        "schema-types": [
          "boolean",
          "int",
          "long",
          "float",
          "double",
          "bytes",
          "string",
          "array",
          "record",
          "map",
          "union"
        ],
        "schema-default-type": "string",
        "property-watch": "format"
      }
    }
  ]
}
